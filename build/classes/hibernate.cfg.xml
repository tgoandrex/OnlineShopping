<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.password">password1234</property>
		<property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/OnlineShopping</property>
		<property name="hibernate.connection.username">postgres</property>
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL92Dialect</property>
		<mapping class="model.User" />
		<mapping class="model.UserRoles" />
		<mapping class="model.Category" />
		<mapping class="model.Order" />
		<mapping class="model.Product" />
	</session-factory>
</hibernate-configuration> 